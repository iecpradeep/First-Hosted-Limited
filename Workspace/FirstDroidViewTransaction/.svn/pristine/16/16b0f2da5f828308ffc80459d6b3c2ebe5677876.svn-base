<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tvTranType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="40dp"
        android:text="Cash Sale"
        android:textSize="24sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp" >

            <TextView
                android:id="@+id/tvCustomer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer: Dunlo Herd" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow99"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tvSalesRep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sales Rep: John Mackay" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp" >
        </TableRow>

	<TableLayout
		android:id="@+id/tlItems"
       	android:layout_height="50dp">
    
		<TableRow
			android:id="@+id/trItem"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" >

          	<TextView
            	android:id="@+id/textView76"
              	android:layout_width="fill_parent"
              	android:layout_height="wrap_content"
              	android:background="@android:color/darker_gray"
              	android:minWidth="200dp"
              	android:text="Item"
              	android:textColor="@android:color/white" />

	        <TextView
	            android:id="@+id/textView67"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:background="@android:color/darker_gray"
	            android:minWidth="60dp"
	            android:text="Price"
	            android:textColor="@android:color/white" />
	
	        <TextView
	            android:id="@+id/textView56"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:background="@android:color/darker_gray"
	            android:minWidth="60dp"
	            android:text="Quantity"
	            android:textColor="@android:color/white" />
		</TableRow>
        
		<TableRow
			android:id="@+id/tableRow74"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" >

 			<TextView
     			android:id="@+id/textView45"
				android:layout_width="wrap_content"
     			android:layout_height="wrap_content"
    			android:text="Ai Services First Time" />

			<TextView
     			android:id="@+id/textView34"
    			android:layout_width="wrap_content"
     			android:layout_height="wrap_content"
     			android:text="€600" />

 			<TextView
     			android:id="@+id/textView54"
    			android:layout_width="wrap_content"
     			android:layout_height="wrap_content"
     			android:text="1" />
		</TableRow>
	</TableLayout>
	        

        <TableRow
            android:id="@+id/tableRow112"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </TableRow>

        <TableRow
            android:id="@+id/tableRow655"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </TableRow>

        <TableRow
            android:id="@+id/tableRow884"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </TableRow>
    </TableLayout>

    <TableRow
        android:id="@+id/tableRow8664"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp" >
    </TableRow>

    <TableRow
        android:id="@+id/tableRow4665"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Total: €1049"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow86554"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp" >
    </TableRow>

    <TableRow
        android:id="@+id/tableRow86334"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tvPaymentMethod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/paymentMethodString"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow86334"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tvPayMethLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow8464"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp" >

        <Button
            android:id="@+id/ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/okString"
            android:drawableLeft="@drawable/tick48"
            android:minHeight="48dp"
            android:minWidth="320dip"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="30dp"
            android:onClick="ok"
            android:text="@string/okString" />
    </TableRow>

</TableLayout>