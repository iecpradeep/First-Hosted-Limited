/**
 * before record load
 * 
 * @param type
 * @param form
 */
function beforeLoadBtn(type, form)
{
	try
	{ 
		if(type == 'create' || type == 'edit')
		{     		
			form.addButton('custpage_cust','Quick Item Add', "salesOrderQuickAddClient");
			form.setScript('customscript_salesorderquickaddclient');	
		}	
	}
	catch(e)
	{
		errorHandler("beforeLoadButton ", e);
	}
}