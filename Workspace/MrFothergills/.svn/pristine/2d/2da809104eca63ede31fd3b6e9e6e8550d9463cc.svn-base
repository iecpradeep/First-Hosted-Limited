<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title>Newsletter Signup</title>
<link href="/c.3322617/site/dtbrown/css/default.css" rel="stylesheet" type="text/css">
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
<script type="text/javascript">
$(document).ready(function(){
nlapiSetFieldValue('custrecord_ne_brand', '2', true, true); // DTB
nlapiSetFieldValue('custrecord_ne_leadsource', '348', true, true); // Web - DTB Newsletter Signup

if ($('#custrecord_ne_email').attr('type') != 'hidden')
{
	var firstNameText = 'First Name';
	var lastNameText = 'Last Name';
	var emailText = 'Email';
	
	$('#custrecord_ne_firstname').val(firstNameText);
	$('#custrecord_ne_lastname').val(lastNameText);
	$('#custrecord_ne_email').val(emailText);
}

$('#custrecord_ne_firstname').focus(function(){
	if ($(this).val() == firstNameText)
	{
		$(this).val('');
	}
}).blur(function(){
	if ($(this).val() == '')
	{
		$(this).val(firstNameText);
	}
});

$('#custrecord_ne_lastname').focus(function(){
	if ($(this).val() == lastNameText)
	{
		$(this).val('');
	}
}).blur(function(){
	if ($(this).val() == '')
	{
		$(this).val(lastNameText);
	}
});

$('#custrecord_ne_email').focus(function(){
	if ($(this).val() == emailText)
	{
		$(this).val('');
	}
}).blur(function(){
	if ($(this).val() == '')
	{
		$(this).val(emailText);
	}
});
});
</script>
</head>
<body style="background-color:transparent;">
<div id="iframeouterwrapper">
<div class="iframecontainer outline">
<NLFORM>
<h4>Sign Up for our Newsletter and Offers</h4>
<div style="display:none;"><NLCUSTRECORD_NE_BRAND><NLCUSTRECORD_NE_LEADSOURCE></div>
<NLCUSTRECORD_NE_SALUTATION>
<NLCUSTRECORD_NE_FIRSTNAME>
<NLCUSTRECORD_NE_LASTNAME><br>
<NLCUSTRECORD_NE_EMAIL>
<p style="text-align:center;margin-top:10px;"><input type="submit" value="Submit" class="button shadowbox" style="padding:10px 15px;"></p>
</form>
</div>
</div>
</body>
</html>